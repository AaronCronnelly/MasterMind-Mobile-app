<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorldOfCodeBreaker.MainPage"
             BackgroundColor="Blue">

    <StackLayout>
       <Button Text="Begin" BackgroundColor="DarkGray"
               HorizontalOptions="Center" VerticalOptions="Center"
               TextColor="Black" x:Name="BTNBegin"
               Clicked="BTNBegin_Clicked"/>
    
        <Grid x:Name="GameGrid" BackgroundColor="Red" Margin="10"
              HeightRequest="400" WidthRequest="600" HorizontalOptions="StartAndExpand"
              VerticalOptions="StartAndExpand" IsVisible="false"
              >
        </Grid>

        <Grid x:Name="PegGrid" BackgroundColor="Yellow" Margin="2" HeightRequest="50" WidthRequest="50"
              HorizontalOptions="End" VerticalOptions="End" IsVisible="false"></Grid>

    </StackLayout>

     
</ContentPage>
