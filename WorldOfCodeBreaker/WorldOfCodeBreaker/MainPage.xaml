<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorldOfCodeBreaker.MainPage"
             BackgroundColor="LightSlateGray">

    <StackLayout>

        <Label Text="World of Code Breaker" FontSize="Title" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
           BackgroundColor="LightGreen" TextColor="Black" Opacity="1" Margin="25,30"/>

       <Button Text="Begin" BackgroundColor="LightGreen" Margin="25"
               HorizontalOptions="Center" VerticalOptions="Center"
               TextColor="Black" x:Name="BTNBegin"
               Clicked="BTNBegin_Clicked"/>
    
        <Grid x:Name="GameGrid" BackgroundColor="Red" Margin="25,30"
              HeightRequest="400" WidthRequest="600" HorizontalOptions="StartAndExpand"
              VerticalOptions="StartAndExpand" IsVisible="false"
              >
        </Grid>

        <Grid x:Name="PegGrid" BackgroundColor="Yellow" Margin="2" HeightRequest="50" WidthRequest="50"
              HorizontalOptions="End" VerticalOptions="End" IsVisible="false"></Grid>

    </StackLayout>
</ContentPage>
